@if (Model != null) { 
    <h2 style="width: 100%; text-align: center; margin-bottom: 10px;"> Amount Entered @String.Format("{0:C}",ViewBag.Amount)</h2>   
    <table id="results" class="tablesorter">
        <thead>
            <th>
                Provider 
            </th>
            <th>
                Conversion Rate
            </th>
            <th>
                Converted Amount
            </th>
        </thead>
        <tbody>
            @foreach (var returnedAmount in Model) {
                <tr>
                    <td>
                        @returnedAmount.ProviderName
                    </td>
                    <td>
                        @returnedAmount.ConversionRate.ToString("C", new System.Globalization.CultureInfo("en-IN"))
                    </td>
                    <td>
                        @returnedAmount.ConvertedAmount.ToString("C", new System.Globalization.CultureInfo("en-IN"))
                    </td>
                </tr>  
            }
        </tbody>
    </table>
}
